{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist", // <-- ALTE AQUI!
  "functions": {
    "api/index.mjs": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.mjs"
    },
    {
      "src": "/(.*)", // Esta regra agora apontará para a pasta correta 'dist' por causa do outputDirectory
      "dest": "/$1" // Não precisa mais de "/public/$1" se o outputDirectory for 'dist' e for o root.
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    },
    {
      "source": "/",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
